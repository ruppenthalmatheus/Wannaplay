<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background"
    android:gravity="center"
    android:paddingTop="-5dp">

    <!-- Welcome Message -->
    <TextView
        android:id="@+id/welcome_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold"
        android:textSize="35dp"
        android:text="OLÁ USUÁRIO!"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="#2F80ED" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/register_message"
        android:lines="3"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="13sp" />

    <!-- Label -->
    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:text="@string/abilities_register"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <!-- Abilities Options -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:baselineAligned="false"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <!-- Microphone Checkbox -->
        <CheckBox
            android:id="@+id/singer_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:button="@drawable/singer_icon" />

        <!-- Guitar Checkbox -->
        <CheckBox
            android:id="@+id/guitar_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:button="@drawable/guitar_icon" />

        <!-- Bass Checkbox -->
        <CheckBox
            android:id="@+id/bass_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:button="@drawable/bass_icon" />

        <!-- Drum Checkbox -->
        <CheckBox
            android:id="@+id/drum_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:button="@drawable/drum_icon" />

        <!-- Others Checkbox -->
        <CheckBox
            android:id="@+id/other_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:button="@drawable/other_icon" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="260dp"
        android:text="@string/birth_register"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/date_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="295dp"
        android:hint="@string/birth_pick_register"
        android:textColorHint="@color/DisabledColor"
        android:textColor="@color/textColor"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="325dp"
        android:text="@string/birth_desc_register"
        android:textColor="@color/textColor"
        android:textSize="10sp" />

    <Button
        android:id="@+id/finish_button"
        android:layout_width="268dp"
        android:layout_height="49dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="390dp"
        android:background="@drawable/btn_ripple_finalizar"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold" />


</RelativeLayout>